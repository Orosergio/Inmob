<%- include ../layouts/cabecera.ejs %>   
<br><br>
<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar Datos de Anuncio</h5>
        <p class="card-text">

            <form method="post" action="../actualizar/" enctype="multipart/form-data">
                
                <input type="text" name="id" value="<%=anuncio.idAnuncios%>">
                              
                <div class="form-group">
                    <label for="my-input">Inmueble</label>
                    <input id="my-input" value="<%=anuncio.idInmueble%>" class="form-control" type="text" name="idInmueble">
                </div>     
                    
                  
                <div class="form-group">
                    <label for="my-input">Ubicacion</label>
                    <input id="my-input" value="<%=anuncio.direccion%>" class="form-control" type="text" name="direccion">
                </div>

                <div class="form-group">
                    <label for="my-input">Departamento</label>
                    <input id="my-input" value="<%=anuncio.idDepartamento%>" class="form-control" type="text" name="idDepartamento">
                </div>

                <div class="form-group">
                    <label for="my-input">Municipio</label>
                    <input id="my-input" value="<%=anuncio.idMunicipio%>" class="form-control" type="text" name="idMunicipio">
                </div>

                <div class="form-group">
                    <label for="my-input">Titulo</label>
                    <input id="my-input" value="<%=anuncio.titulo%>" class="form-control" type="text" name="titulo">
                </div>

                <div class="form-group">
                    <label for="my-input">Descripcion</label>
                    <input id="my-input" value="<%=anuncio.descripcion%>" class="form-control" type="text" name="descripcion">
                </div>

                <div class="form-group">
                    <label for="my-input">email</label>
                    <input id="my-input" value="<%=anuncio.emailAnunciante%>" class="form-control" type="text" name="email">
                </div>

                <div class="form-group">
                    <label for="my-input">telefono</label>
                    <input id="my-input" value="<%=anuncio.telefono%>" class="form-control" type="text" name="telefono">
                </div>
            
                          
                   <div class="form-group">
                    <label for="my-input">Youtube</label>
                    <input id="my-input" value="<%=anuncio.youtubeVideo%>" class="form-control" type="text" name="youtube">
                </div>
            
                <div class="form-group">
                    <label for="my-input">Imagen</label>
                    <img class="img-thumbnail" src="../../images/anuncios/<%=anuncio.imagenAnuncio%>" width="100" alt="">
                    <input id="my-input" class="form-control-file" type="file" name="archivo">
                </div>

                <div class="form-group">
                    <label for="my-input">estado</label>
                    <input id="my-input" value="<%=anuncio.estado%>" class="form-control" type="text" name="estado">
                </div> 

                <button class="btn btn-success" type="submit">Guardar</button>
                <a class="btn btn-primary" href="/anuncios">Cancelar</a>
            
            </form>

        </p>
    </div>
</div>


