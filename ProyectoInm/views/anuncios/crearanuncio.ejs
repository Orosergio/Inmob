<%- include ../layouts/cabecera.ejs %>   
<br><br>
<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Datos de Anuncio</h5>
        <p class="card-text">

            <form method="post" action="/anuncios" enctype="multipart/form-data">
                
                    <label for="my-input">Inmueble</label>
                    <input type="text" name="idInmueble" id="idInmueble" value="">
                    <select id="s1" onchange="otracosa();" class="form-control form-control-lg">
                        <option value=0 >Seleccione inmueble</option>
                        <% for( let inm = 0; inm < anuncioInmuebles.length; inm++ ) { %>                            
                            <option value=<%=anuncioInmuebles[inm].idInmueble %>><%=anuncioInmuebles[inm].nombre %></option>
                        <% } %>                        
                    </select>

                      <script>
                          var elemento = document.getElementById("s1");
                          var inmm = document.getElementById("idInmueble");
                          inmm = elemento.value;
                          function otracosa(e) {
                              //alert(elemento.value);
                              document.getElementById("idInmueble").value=elemento.value;
                          }
                      </script> 
                      
                      <select id="s2" class="form-control form-control-lg">
                        <option value=0 >Seleccione Departamento</option>
                        <% for( let inm = 0; inm < anuncioInmuebles.length; inm++ ) { %>                            
                            <option value=<%=anuncioInmuebles[inm].idDepartamento %>><%=anuncioInmuebles[inm].idDepartamento %></option>
                        <% } %>                       
                    </select>

                     
                  
                <div class="form-group">
                    <label for="my-input">Ubicacion</label>
                    <input id="my-input" class="form-control" type="text" name="direccion">
                </div>

                <div class="form-group">
                    <label for="my-input">Departamento</label>
                    <input id="my-input" class="form-control" type="text" name="idDepartamento">
                </div>

                <div class="form-group">
                    <label for="my-input">Municipio</label>
                    <input id="my-input" class="form-control" type="text" name="idMunicipio">
                </div>

                <div class="form-group">
                    <label for="my-input">Titulo</label>
                    <input id="my-input" class="form-control" type="text" name="titulo">
                </div>

                <div class="form-group">
                    <label for="my-input">Descripcion</label>
                    <input id="my-input" class="form-control" type="text" name="descripcion">
                </div>

                <div class="form-group">
                    <label for="my-input">email</label>
                    <input id="my-input" class="form-control" type="text" name="email">
                </div>

                <div class="form-group">
                    <label for="my-input">telefono</label>
                    <input id="my-input" class="form-control" type="text" name="telefono">
                </div>
            
                          
                   <div class="form-group">
                    <label for="my-input">Youtube</label>
                    <input id="my-input" class="form-control" type="text" name="youtube">
                </div>
            
                <div class="form-group">
                    <label for="my-input">Imagen</label>
                    <input id="my-input" class="form-control-file" type="file" name="archivo">
                </div>

                <div class="form-group">
                    <label for="my-input">estado</label>
                    <input id="my-input" class="form-control" type="text" name="estado">
                </div> 

                <button class="btn btn-success" type="submit">Guardar</button>
                <a class="btn btn-primary" href="/anuncios">Cancelar</a>
            
            </form>

        </p>
    </div>
</div>


