<%- include ../layouts/cabecera.ejs %>   

<br><br>

<div class="card">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos de boletas</h5>
        <p class="card-text">

            <form method="post" action="../actualizar/" enctype="multipart/form-data">

                <input type="text" name="idControl" value= "<%=pagoInmueble.idControl%>">
            
                <div class="form-group">
                    <label for="my-input">IdAlquiler</label>
                    <input id="my-input" value="<%=pagoInmueble.Inmueble%>" class="form-control" type="text" name="idAlquiler">
                </div>
            
                <div class="form-group">
                    <label for="my-input">Imagen Boleta de pago</label>
                     <img class="img-thumbnail" src="../../images/boletasPago/<%=pagoInmueble.boletaPago%>" width="100" alt=""> 
                    <input id="my-input" class="form-control-file" type="file" name="archivo">
                </div>
            
                <input type="date" id="start" name="fechaBoleta"
                   value="2021-09-25"
                   min="2020-01-01" max="2025-12-31">
            
                   <div class="form-group">
                    <label for="my-input">Descripcion</label>
                    <input id="my-input" value= "<%=pagoInmueble.descripcion%>" class="form-control" type="text" name="descriptionIn">
                </div>
            
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a class="btn btn-primary" href="/pagosInmueble">Cancelar</a>
            </form>

        </p>
    </div>
</div>


